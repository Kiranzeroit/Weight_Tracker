<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bd_stroke_white_bg"
    android:layout_marginTop="@dimen/_5sdp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDateT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date:-"
        android:textColor="@color/black"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/tvDate"
        app:layout_constraintTop_toTopOf="@id/tvDate" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_10sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="12/07/2023" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTimeT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time:-"
        android:textColor="@color/black"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/tvDateT"
        app:layout_constraintTop_toBottomOf="@id/tvDateT" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_10sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintStart_toEndOf="@id/tvTimeT"
        app:layout_constraintTop_toTopOf="@id/tvTimeT"
        tools:text="12:07" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvWeightT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:text="Weight:-"
        android:textColor="@color/black"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintStart_toEndOf="@id/tvWeightT"
        app:layout_constraintTop_toTopOf="@id/tvWeightT"
        tools:text="56" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCaloriesT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calories:-"
        android:textColor="@color/black"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/tvWeightT"
        app:layout_constraintTop_toBottomOf="@id/tvWeightT" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCalories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintStart_toEndOf="@id/tvCaloriesT"
        app:layout_constraintTop_toTopOf="@id/tvCaloriesT"
        tools:text="56" />


</androidx.constraintlayout.widget.ConstraintLayout>